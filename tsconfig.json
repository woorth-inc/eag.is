{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "baseUrl": ".",
        "noEmit": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "include": [
        "src",
        "types"
    ]
}